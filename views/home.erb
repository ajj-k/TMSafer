<div class="mx-auto start" style="width: 600px; font-family: 'M PLUS 1', sans-serif;">
<% begin %>
<h1 style="margin-top:64px;"class="border-bottom"><%= current_user.name %>さん、ようこそ</h1>

<form action="/logout" method="post">
    <input class="btn btn-link" type="submit" value="お帰りですか？">
</form></br>


<h2>School一覧</h2>
<% current_user.schools.all.each do |school| %>
    <a class="btn btn-link" href="/school/<%= school.id %>"><%= school.name %></a></br>
<% end %>

