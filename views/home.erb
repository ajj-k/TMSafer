<!-- data-bs-〇〇 と入力する必要がある -->
<button style="margin-top:1em;"type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    新規スクール作成
</button>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">新規スクール登録</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>スクール名を記入してください</p>
                <form action="/school/create" method="post">
                    <input type="text" name="name" placeholder="school_name">
                    <input type="submit" value="登録">
                </form>
            </div>
        </div>
    </div>
</div>
<% rescue %>
<h3 class="border-bottom">エラーです…もういちどログインしてください</h3>
<form action="/logout" method="post">
    <input class="btn btn-link" type="submit" value="こちらから">
</form></br>
</div>
<% end %>
